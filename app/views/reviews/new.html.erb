<% unless @card.nil? %>
  <div class="alert alert-warning text-center">
    <%= @card.translated_text %>
  </div>
  <%= simple_form_for(:review, url: reviews_path) do |f| %>
    <%= f.hidden_field :card_id, value: @card.id %>
    <%= f.input_field :user_input, class: "form-control" %>
    <%= f.button :submit, "Review" %>
  <% end %>
<% end %>
