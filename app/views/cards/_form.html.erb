<%= simple_form_for card do |f| %>
  <%= f.input :original_text %>
  <%= f.input :translated_text %>
  <%= f.input :image %>
  <%= f.association :deck, collection: current_user.decks, include_blank: false,  label: "Выберите колоду" %>
  <%= f.simple_fields_for :new_deck do |deck| %>
    <%= deck.input :title, label: "Или создайте новую" %>
  <% end %>
  <%= f.input :review_date %>
  <%= f.button :submit %>
<% end %>
